<%= form_for @comment do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :blog_id %><br />
    <%= f.number_field :blog_id %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </p>
  <p>
    <%= f.label :pid %><br />
    <%= f.number_field :pid %>
  </p>
  <p><%= f.submit %></p>
<% end %>
